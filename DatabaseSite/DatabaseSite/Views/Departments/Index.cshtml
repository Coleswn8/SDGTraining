@model IEnumerable<DatabaseSite.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="DepTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.Partial("~/Views/Shared/Partials/DepartmentPartial.cshtml", item);
    }
</table>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>


<div>
    <button id="OpenButton" class="btn btn-default" >Open Me!</button>
</div>

<script type="text/javascript">
    $(document).ready(function () {
          $(document).on('click', '#AddButton', function () {
            var a = $("#DepNameInput").val();
            $.ajax({
                url: "../../AjaxTest/FirstAjax",
                type: "POST",
                data: { name: a },
                success: function (response) {
                    $("#DepTable tr:last").after(response);
                    $("#CreateForm").after("<div> <button id = 'OpenButton' class='btn btn-default'>Open Me!</button> </div>");
                    $("#CreateForm").remove();
                },
                error: function (response) {
                    alert("Invalid field entry for new department");
                }
            });
        });
        $(document).on('click', '#OpenButton', function () {
            var b = $(this);
            $.ajax({
                url: "../../AjaxTest/CreatePrompt",
                type: "GET",
                success: function (response) {
                    $("#OpenButton").after(response);
                    b.remove();
                },
                error: function (response) {
                    alert("there was an error");
                }
            });
        });
        $(document).on('click', '#CancelButton', function () {
            $("#CreateForm").after("<div> <button id = 'OpenButton' class='btn btn-default'>Open Me!</button> </div>");
            $("#CreateForm").remove();
        });
    });
</script>

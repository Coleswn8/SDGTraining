@model DatabaseSite.Models.Login

<h1>
    Data
    Name: @Html.DisplayFor(x => x.UserName)
    Password: @Html.DisplayFor(x => x.Password)
</h1>


@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
<div class="form-horizontal">

    <hr />
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(s => s.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(s => s.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
